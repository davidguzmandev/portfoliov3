---
interface Props {
    date: string,
    title: string,
    description: string,
    company: string,
}
const { date, title, description, company } = Astro.props
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-cyan-600 rounded-full mt-1.5 -start-1.5 border border-cyan-600 dark:border-gray-900 dark:bg-gray-700"></div>
    <time class="mb-1 text-sm font-normal leading-none text-gray-800 dark:text-gray-500">{date}</time>
    <h3 class="text-lg font-semibold text-cyan-600 dark:text-cyan-600">{title}</h3>
    <p class="text-xs italic">{company}</p>
    <p class="mb-4 text-base font-normal text-gray-800 dark:text-gray-100 text-pretty">{description}</p>
</li>