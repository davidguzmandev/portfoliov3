---
let date = new Date();
let time = () => {
    const minutes = date.getMinutes();
        if (minutes <= 9 ) {
            return `${date.getHours()}:0${date.getMinutes()}`
        }
    return `${date.getHours()}:${date.getMinutes()}`
}
